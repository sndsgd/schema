{
    "name": "sndsgd/schema",
    "description": "Tools for validating data",
    "type": "library",
    "homepage": "https://github.com/sndsgd/schema",
    "autoload": {
        "psr-4": {
            "sndsgd\\schema\\": "src/"
        }
    },
    "bin": [
        "schema"
    ],
    "autoload-dev": {
        "psr-4": {
            "sndsgd\\schema\\": ["src/", "tests/unit/"],
            "sndsgd\\types\\": ["build/sndsgd/types/"],
            "sndsgd\\model\\": ["build/sndsgd/model/"]
        }
    },
    "repositories": {
      "dev-package": {
        "type": "path",
        "url": "../yaml"
      }
    },
    "require": {
        "sndsgd/util": "^2.2",
        "sndsgd/yaml": "@dev",
        "symfony/console": "^5.2"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "9.5.13",
        "slevomat/coding-standard": "~8",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
